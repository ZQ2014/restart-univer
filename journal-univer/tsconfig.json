{
  "compilerOptions": {
    "target": "ES2022", // 目标 JavaScript 版本
    "useDefineForClassFields": true, // 使用 define 来定义类字段
    "module": "ESNext", // 模块系统
    "lib": ["ES2022", "DOM", "DOM.Iterable"], // 包含的库文件
    "skipLibCheck": true, // 跳过库文件的类型检查

    /* Bundler mode */
    "moduleResolution": "bundler", // 模块解析策略
    "allowImportingTsExtensions": true, // 允许导入 TypeScript 扩展名的文件
    "verbatimModuleSyntax": true, // 保持模块语法不变
    "moduleDetection": "force", // 强制模块检测
    "noEmit": true, // 不生成输出文件

    /* Linting */
    "strict": true, // 启用所有严格类型检查选项
    "noUnusedLocals": true, // 不允许未使用的局部变量
    "noUnusedParameters": true, // 不允许未使用的参数
    "erasableSyntaxOnly": false, // 允许使用非可擦除语法
    "noFallthroughCasesInSwitch": true, // 不允许 switch 语句中的贯穿情况
    "noUncheckedSideEffectImports": true, // 不允许未检查的副作用导入

    "jsx": "react-jsx", // 允许在tsx中使用jsx语法
    "experimentalDecorators": true // 允许使用装饰器
  },

  "include": ["src"]
}
